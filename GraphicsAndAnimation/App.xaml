<Application x:Class="GraphicsAndAnimation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GraphicsAndAnimation"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <RadialGradientBrush x:Key="MainBackgroundBrush" GradientOrigin="0.5,0">
            <GradientStop Color="#FFD4EDF8" Offset="0"/>
            <GradientStop Color="#FF7AD2F8" Offset="1"/>
        </RadialGradientBrush>
    </Application.Resources>
</Application>
